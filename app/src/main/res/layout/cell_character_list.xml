<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/character_cell_illustration"
        android:layout_width="@dimen/cell_character_image_size"
        android:layout_height="@dimen/cell_character_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/character_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cell_character_text_height"
        android:gravity="center"
        android:layout_toEndOf="@id/character_cell_illustration"
        android:layout_toRightOf="@id/character_cell_illustration"/>

</RelativeLayout>